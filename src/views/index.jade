    body
        h1 Event Calendar
        .js-cal

        button.js-events Generate event naow!

    script(src='event-calendar.min.js')
    script.
        var cal = eventCalender({ selector: '.js-cal' });
        var btn = document.querySelector('.js-events');

        btn.addEventListener('click', function() {
            cal.setState({
                events: [{
                    name: 'Example event',
                    date: Date.now(),
                    link: 'http://example.com'
                }]
            });
        });